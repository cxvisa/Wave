<wave>
    <application>
        <name>Spectrum</name>

        <daemonize>true</daemonize>

        <initial-working-directory>/home/sagar/CxWave/Wave/Java/application/execution</initial-working-directory>

        <ethernet-interface>eno16777736</ethernet-interface>

        <environment>
            <working-directory>.</working-directory>
            <language>en</language>
            <country>US</country>
        </environment>

        <configuration>
            <directory-name>config</directory-name>
            <config-file-extension>cfg</config-file-extension>
            <backup-file-extension>bk</backup-file-extension>
            <temp-file-extension>tmp</temp-file-extension>
            <local>
                <file-name></file-name>
                <backup-file-name></backup-file-name>
                <lock-file-name></lock-file-name>
            </local>

            <global>
                <file-name></file-name>
                <temp-file-name></temp-file-name>
            </global>
        </configuration>
    </application>

    <database>
        <enable>true</enable>

        <port>9013</port>

        <detect-corruption>true</detect-corruption>
        <handle-corruption>true</handle-corruption>

        <enable-log>true</enable-log>
        <log-file></log-file>

        <shared-buffers></shared-buffers>
    </database>

    <management-interface>
        <server>
            <enable>true</enable>

            <port>9110</port>
        </server>

        <client>
            <enable>true</enable>

            <port>9710</port>
        </client>
    </management-interface>

    <system-management>
        <wyser>
            <yang>
            </yang>
        </wyser>
    </system-management>

    <cluster>
        <enable>yes</enable>

        <port>3016</port>
    </cluster>

    <ras>
        <syslog>
            <enable>true</enable>
        </syslog>

       <trace>
           <enable>true</enable>
           <directory-name></directory-name>
           <file-name></file-name>
           <file-size>10MB</file-size>
           <number-of-files>5</number-of-files>
           <default-level>INFO</default-level>
       </trace>

       <log>
           <enable>true</enable>
           <number-of-logs>100000</number-of-logs>
           <audit-log>
           </audit-log>
       </log>
    </ras>

    <ha>
        <enable>true</enable>
        <port></port>
    </ha>

    <http>
        <enable>true</enable>
        <port>1100</port>
    </http>

    <orm>
        <schema>
            <detect-diff>true</detect-diff>
        </schema>
    </orm>

    <upgrade>
        <dump-db>true</dump-db>
    </upgrade>

    <profile>
        <enable>false></enable>
        <file-name></file-name>
    </profile>
</wave>

